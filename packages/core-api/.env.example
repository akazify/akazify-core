# Akazify Core API Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=development
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
LOG_LEVEL=info

# Database Configuration (PostgreSQL + TimescaleDB)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=akazify_core
DATABASE_USER=akazify
DATABASE_PASSWORD=akazify_dev_password
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=akazify-core-api
KAFKA_GROUP_ID=akazify-core-group
KAFKA_SSL=false
# KAFKA_USERNAME=
# KAFKA_PASSWORD=
# KAFKA_SASL_MECHANISM=plain

# Redis Configuration
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Authentication (JWT)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=akazify-core

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PREFIX=akazify_core
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# External Service Integration
# ERP_DYNAMICS_ENDPOINT=
# ERP_DYNAMICS_CLIENT_ID=
# ERP_DYNAMICS_CLIENT_SECRET=
# ERP_NETSUITE_ENDPOINT=
# ERP_NETSUITE_TOKEN=
