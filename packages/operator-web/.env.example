# Akazify Operator Web Environment Configuration
# Copy this file to .env.local and update the values for your environment

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Application Configuration
NEXT_PUBLIC_APP_NAME=Akazify Operator
NEXT_PUBLIC_APP_VERSION=0.0.1
NEXT_PUBLIC_APP_DESCRIPTION=Manufacturing Execution System - Operator Interface

# Environment
NODE_ENV=development

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Manufacturing Configuration
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_DEFAULT_LOCALE=en-US
NEXT_PUBLIC_REFRESH_INTERVAL=30000

# Debugging
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_QUERY_DEVTOOLS=true
